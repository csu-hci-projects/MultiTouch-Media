link(href='../css/radial.css', rel='stylesheet')
script(src='../js/radial.js')

input(type = 'file', id = 'imgUpload', name = 'backgroundImage' style = 'display:none')
div(id='background')

div#radial.menu
    img(src='../images/1x1.png', onclick="readURL()")
    div#tools 
        img#palette(src="../images/palette.png")
        img#undo(src="../images/undo.png")
        img#trash(src="../images/trash.png")
        img#upload(src="../images/upload.png")
        img#save(src="../images/floppy.png", onclick='saveImage()')
        img#lineStyle(src="../images/gear.png")
        img#eraser(src="../images/eraser.png")

//- Remember that the tools start at #palette at  90deg, and end with #eraser at 60deg with 360 menu. 
        
