link(href='../css/basic.css', rel = 'stylesheet')
script(src='../js/basic.js')


div#basic
    div#tools
        img#palette(src="../images/palette.png")
        img#undo(src="../images/undo.png")
        img#trash(src="../images/trash.png")
        img#upload(src="../images/upload.png")
        img#save(src="../images/floppy.png")
        img#lineStyle(src="../images/gear.png")
        img#eraser(src="../images/eraser.png")
    table#colorSelector
